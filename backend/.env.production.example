# ==========================================
# ENTORNO DE PRODUCCIÓN - BACKEND
# ==========================================
# IMPORTANTE: Copia este archivo como .env.production y configura los valores

NODE_ENV=production
PORT=3003

# ==========================================
# BASE DE DATOS
# ==========================================
DATABASE_URL="postgresql://municipal_user:CAMBIAR_PASSWORD@localhost:5432/municipal_db_prod"

# ==========================================
# SEGURIDAD
# ==========================================
# IMPORTANTE: Genera un secret único y seguro (mínimo 32 caracteres)
# Puedes usar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CAMBIAR-ESTE-SECRET-POR-UNO-ALEATORIO-MINIMO-32-CARACTERES
JWT_EXPIRES_IN=7d

# ==========================================
# CORS
# ==========================================
# Dominios permitidos (separados por coma)
CORS_ORIGIN=http://147.93.184.19:3002,http://localhost:3002

# ==========================================
# UPLOADS
# ==========================================
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=10485760

# ==========================================
# EMAIL (Configurar con servicio real)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password
SMTP_FROM=noreply@municipal.gob.ve

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# LOGS
# ==========================================
LOG_LEVEL=info
